{
  "name": "better-auth-svelte-ui",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "pnpm run build && wrangler dev",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "db:push": "drizzle-kit push --config=drizzle-dev.config.ts",
    "db:push:prod": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate --config=drizzle-dev.config.ts",
    "db:migrate:prod": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate --config=drizzle-dev.config.ts",
    "db:generate:prod": "drizzle-kit generate",
    "db:studio:prod": "drizzle-kit studio",
    "db:studio": "drizzle-kit studio --config=drizzle-dev.config.ts",
    "deploy": "pnpm run build && wrangler deploy",
    "cf-typegen": "wrangler types && mv worker-configuration.d.ts src/"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "svelte": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./*": "./dist/*",
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@cloudflare/workers-types": "^4.20251128.0",
    "@internationalized/date": "^3.10.0",
    "@lucide/svelte": "^0.544.0",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-a11y": "^10.1.2",
    "@storybook/addon-docs": "^10.1.2",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/addon-vitest": "^10.1.2",
    "@storybook/svelte": "^10.1.2",
    "@storybook/sveltekit": "^10.1.2",
    "@sveltejs/adapter-cloudflare": "^7.2.4",
    "@sveltejs/kit": "^2.48.5",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.17",
    "@vitest/browser-playwright": "^4.0.10",
    "bits-ui": "^2.14.4",
    "chromatic": "^13.3.4",
    "clsx": "^2.1.1",
    "formsnap": "^2.0.1",
    "layerchart": "2.0.0-next.27",
    "playwright": "^1.56.1",
    "storybook": "^10.1.2",
    "svelte": "^5.43.8",
    "svelte-check": "^4.3.4",
    "sveltekit-superforms": "^2.28.1",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.10",
    "vitest-browser-svelte": "^2.0.1",
    "wrangler": "^4.51.0",
    "zod": "^4.1.13"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@cloudflare/vite-plugin": "^1.15.3",
    "@libsql/client": "^0.15.15",
    "@types/node": "^24.10.1",
    "better-auth": "^1.4.3",
    "class-variance-authority": "^0.7.1",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.44.7",
    "lucide-svelte": "^0.555.0",
    "resend": "^6.5.2"
  }
}
